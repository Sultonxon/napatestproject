@model IEnumerable<HistoryModel>

<div class="p-2 bg-info">
    <h3>
        Product History
    </h3>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <td>Category</td>
            <td>Price</td>
            <td>State</td>
            <td>Date</td>
            @if (User.isAdmin()){<td></td>}
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td><td>@p.RelatedCategoryName</td><td>@p.Price</td><td>@p.State</td><td>@p.Date</td>
                @if (User.isAdmin())
                {
                    <td>
                        <a asp-action="HistoryWithId" asp-controller="History" asp-route-id="@p.ProductId"
                   asp-route-returnUrl="@Context.PathAndQuery()">History details for this product</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>