@model ProductModel


<div class="p-2 bg-primary" style="color: white;">
    <h3>
        Update Product 
    </h3>
</div>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post" asp-action="UpdateProduct">
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group " id="selectCategory">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.SelectList">
        </select>
    </div>

    <div class="form-group row collapse" id="newCategory">
        <div class="col-5">
            <label asp-for="NewCategoryName">new category name</label>
            <input type="text" asp-for="NewCategoryName" class="form-control" />
        </div>
        <div class="col-5">
            <label asp-for="NewCategoryDescription">new category description</label>
            <input type="text" asp-for="NewCategoryDescription" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <select asp-for="CategoryCheck" id="categoryCheck">
            <option value="false" selected="@(!Model.CategoryCheck)">Use exsist category</option>
            <option value="true" selected="@Model.CategoryCheck">Create a new category</option>
        </select>
    </div>
    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
    <div class="form-group m-1">
        <button type="submit" class="btn btn-primary">
            Save
        </button>
        <a href="@ViewBag.ReturnUrl" class="btn btn-outline-danger">Cancel</a>
    </div>
</form>
     


<script asp-append-version="true">

    console.log( "scriipt loaded" );
    

    $( "#categoryCheck" ).change( function () {
        console.log( typeof $( "#categoryCheck" ).val() );
        if ( $( "#categoryCheck" ).val() === "true" ) {
            console.log(true)
            $( "#selectCategory" ).addClass( "collapse" );
            $( "#newCategory" ).removeClass( "collapse" );
        }
        else {
            console.log(false);
            $( "#newCategory" ).addClass( "collapse" );
            $( "#selectCategory" ).removeClass( "collapse" );
        }
    } );
</script>

