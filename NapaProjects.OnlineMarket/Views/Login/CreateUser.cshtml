@model UserModel


<div class="p-2 bg-primary">
    <h3 style="color: white">
        Create color
    </h3>
</div>

<form method="post" asp-action="CreateUser">
    <input name="returnUrl" value="@ViewBag.ReturnUrl" type="hidden"/>
    <div class="form-group">
        <label asp-for="UserName">User name</label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FirstName">First name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
            <label asp-for="LastName">Last name</label>
            <input asp-for="LastName" class="form-control" />
        </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone number</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input name="password" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create a new user</button>
        <a href="@ViewBag.ReturnUrl" class="btn btn-outline-danger">Cancel</a>
    </div>
</form>